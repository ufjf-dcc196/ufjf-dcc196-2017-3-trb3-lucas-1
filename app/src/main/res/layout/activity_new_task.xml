<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.toybox.lucasrezende.dcc196_gestao_de_tarefas.Forms.NewTask">

    <TextView
        android:id="@+id/txtLabelNovaTarefa"
        android:layout_width="111dp"
        android:layout_height="29dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/nova_tarefa"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlHardcoded" />

    <EditText
        android:id="@+id/txtTituloNewTask"
        android:layout_width="368dp"
        android:layout_height="42dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="@string/titulo"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtLabelNovaTarefa"
        tools:ignore="RtlHardcoded" />

    <EditText
        android:id="@+id/txtDescricaoTarefa"
        android:layout_width="359dp"
        android:layout_height="203dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="@string/descri_ao"
        android:inputType="textPersonName"
        android:textAlignment="inherit"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTituloNewTask"
        app:layout_constraintHorizontal_bias="0.555" />

    <Spinner
        android:id="@+id/spnDificuldade"
        android:layout_width="163dp"
        android:layout_height="48dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="8dp"
        tools:ignore="RtlHardcoded"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txtTagsAdcionar" />

    <Spinner
        android:id="@+id/spnStatus"
        android:layout_width="163dp"
        android:layout_height="48dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        tools:ignore="RtlHardcoded"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txtTagsAdcionar" />

    <Button
        android:id="@+id/btnConfirmar"
        android:layout_width="164dp"
        android:layout_height="59dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/confirmar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spnDificuldade"
        tools:layout_editor_absoluteX="212dp"
        tools:ignore="RtlHardcoded" />

    <Button
        android:id="@+id/btnCancelar"
        android:layout_width="174dp"
        android:layout_height="62dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/cancelar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spnStatus"
        tools:ignore="RtlHardcoded" />

    <EditText
        android:id="@+id/txtTagsAdcionar"
        android:layout_width="364dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint='adicionar Tag Separadas com ","'
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/txtDescricaoTarefa"
        tools:layout_editor_absoluteX="10dp" />

</android.support.constraint.ConstraintLayout>
