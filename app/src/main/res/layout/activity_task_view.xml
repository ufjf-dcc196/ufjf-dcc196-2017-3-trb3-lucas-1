<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.toybox.lucasrezende.dcc196_gestao_de_tarefas.View.TaskView">

    <Button
        android:id="@+id/btnApagarTarefa"
        android:layout_width="166dp"
        android:layout_height="48dp"
        android:text="Apagar Tarefa"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/spnStatusView"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp" />

    <Button
        android:id="@+id/btnEditarTarefa"
        android:layout_width="166dp"
        android:layout_height="48dp"
        android:text="Editar Tarefa"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/spnDificuldadeView"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="8dp" />

    <EditText
        android:id="@+id/txtTituloTarefaView"
        android:layout_width="351dp"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/txtDescricaoTarefa"
        android:layout_width="346dp"
        android:layout_height="217dp"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="18dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txtTituloTarefaView" />

    <Spinner
        android:id="@+id/spnStatusView"
        android:layout_width="167dp"
        android:layout_height="53dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/txtDescricaoTarefa"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp" />

    <Spinner
        android:id="@+id/spnDificuldadeView"
        android:layout_width="168dp"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/txtDescricaoTarefa"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="8dp" />

    <EditText
        android:id="@+id/lstTagsForTask"
        android:layout_width="359dp"
        android:layout_height="42dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/btnApagarTarefa"
        tools:layout_editor_absoluteX="16dp" />

</android.support.constraint.ConstraintLayout>
