<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.toybox.lucasrezende.dcc196_gestao_de_tarefas.MainActivity">

    <TextView
        android:id="@+id/txtLabelTarefas"
        android:layout_width="266dp"
        android:layout_height="46dp"
        android:text="Tarefas:"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.034" />

    <Button
        android:id="@+id/btnNovaTarefa"
        android:layout_width="346dp"
        android:layout_height="43dp"
        android:layout_marginTop="18dp"
        android:text="Nova Tarefa"
        app:layout_constraintTop_toBottomOf="@+id/lstListaDeTarefas"
        tools:layout_editor_absoluteX="18dp" />

    <ListView
        android:id="@+id/lstListaDeTarefas"
        android:layout_width="350dp"
        android:layout_height="303dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/spnFiltroTags"
        tools:layout_editor_absoluteX="16dp" />

    <Spinner
        android:id="@+id/spnFiltroTags"
        android:layout_width="350dp"
        android:layout_height="47dp"
        tools:layout_editor_absoluteX="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txtLabelTarefas" />

    <Button
        android:id="@+id/btndrop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="Drop"
        app:layout_constraintBottom_toTopOf="@+id/spnFiltroTags"
        app:layout_constraintLeft_toRightOf="@+id/txtLabelTarefas"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
